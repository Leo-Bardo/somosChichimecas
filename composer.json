{
  "name": "somosChichimecas",
  "description": "Proyecto web para visibilizar al pueblo Chichimeca de San Luis de la Paz Guanajuato",
  "type": "project",
  "require": {
    "php": "^7.4|^8.4",  // Definir la versión de PHP requerida
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",  // Dependencia para testing (si es necesario)
    "symfony/var-dumper": "^5.0" // Herramientas para depuración
  },
  "autoload": {
    "psr-4": {
      "App\\": "views/templates/index.php"  // Define el espacio de nombres y la carpeta donde están tus archivos PHP
    }
  },
  "config": {
    "optimize-autoloader": true, // Optimiza el autoload de clases
    "preferred-install": "dist"  // Usar distribuciones preempaquetadas para dependencias
  },
  "scripts": {
    "post-install-cmd": [
      "php -r 'file_exists(\".env\") || copy(\".env.example\", \".env\");'"  // Copiar archivo .env si no existe
    ]
  }
}
